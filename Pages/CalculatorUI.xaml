<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="using:Calculator.ViewModels"
             x:Class="Calculator.Pages.CalculatorUI"
             x:DataType="viewModel:CalculatorUI"
             Title="Calculadora">

    <Grid RowDefinitions="*,*,*,*,*,*"
          ColumnDefinitions="*,*,*,*"
          Padding="10"
          RowSpacing="10"
          ColumnSpacing="10">

      <Grid.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="BackgroundColor" Value="#f0f0f0"/>
            <Setter Property="TextColor" Value="#333"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Command" Value="{Binding ComputeCommand}"/>
            <Setter Property="CommandParameter" Value="{Binding Text, Source={RelativeSource Self}}"/>
        </Style>
      </Grid.Resources>

        <Label Text="{Binding Display}"
               FontSize="36"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Grid.Row="0"
               Grid.ColumnSpan="4" />
               
        <Button Text="7" Grid.Row="1" Grid.Column="0"/>
        <Button Text="8" Grid.Row="1" Grid.Column="1"/>
        <Button Text="9" Grid.Row="1" Grid.Column="2"/>
        <Button Text="รท" Grid.Row="1" Grid.Column="3"/>
        <Button Text="4" Grid.Row="2" Grid.Column="0"/>
        <Button Text="5" Grid.Row="2" Grid.Column="1"/>
        <Button Text="6" Grid.Row="2" Grid.Column="2"/>
        <Button Text="x" Grid.Row="2" Grid.Column="3"/>
        <Button Text="1" Grid.Row="3" Grid.Column="0"/>

        <Button Text="2" Grid.Row="3" Grid.Column="1"/>
        <Button Text="3" Grid.Row="3" Grid.Column="2"/>
        <Button Text="-" Grid.Row="3" Grid.Column="3"/>
        <Button Text="0" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"/>
        <Button Text="C" Grid.Row="4" Grid.Column="2"/>
        <Button Text="+" Grid.Row="4" Grid.Column="3"/>
        <Button Text="=" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4"/>

    </Grid>

</ContentPage>